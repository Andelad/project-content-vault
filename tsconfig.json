{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/application/*": ["./src/application/*"],
      "@/infrastructure/*": ["./src/infrastructure/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/components/*": ["./src/presentation/components/*"],
      "@/contexts/*": ["./src/presentation/contexts/*"],
      "@/hooks/*": ["./src/presentation/hooks/*"],
      "@/utils/*": ["./src/presentation/utils/*"],
      "@/lib/*": ["./src/presentation/lib/*"],
      "@/constants/*": ["./src/presentation/constants/*"],
      "@/pages/*": ["./src/website/pages/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    // Performance and code quality improvements
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false, // Enable later
    "exactOptionalPropertyTypes": false // Enable later
  }
}
